<div class="modal-content">
    <form class="newCourse">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title" id="gridSystemModalLabel">New Class</h2>
    </div>
    <div class="modal-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                
                <div class="form-group">
                    <label for="new-course-classCode" class="control-label">Course Abbreviation</label>
                    <input id="new-course-classCode" required="true" class="classCode form-control" type="text" name="classCode" placeholder="i.e. CPE">
                </div>
                
                <div class="form-group">
                    <label for="new-course-classNumber" class="control-label">Course Number</label>
                    <input id="new-course-classNumber" required="true" class="classNumber form-control" type="text" name="classNumber" placeholder="i.e. 101">
                </div>
                
                <div class="form-group">
                    <label for="new-course-classSection" class="control-label">Section</label>
                    <input id="new-course-classSection" type="number" min="1" max="99" required="false" class="classSection form-control" type="text" name="classNumber">
                </div>
                
                <div class="form-group">
                    <div class="btn-group" data-toggle="buttons" aria-label="Course Term">
                        <label class="btn btn-default"><input type="radio" class="winter" autocomplete="off">Winter</input></label>
                        <label class="btn btn-default"><input type="radio" class="spring" autocomplete="off">Spring</input></label>
                        <label class="btn btn-default"><input type="radio" class="summer" autocomplete="off">Summer</input></label>
                        <label class="btn btn-default"><input type="radio" class="fall" autocomplete="off">Fall</input></label>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="new-course-year" class="control-label">Year</label>
                    <input id="new-course-year" required="true" class="classYear form-control" type="text" name="year" placeholder="Year">
                </div>
                
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="error text-center"></div>
        <button type="button" data-loading-text="Loading..."  class="save btn btn-primary" autocomplete="off">Save</button>
        <button type="button" class="cancel btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
    </form>
</div>
